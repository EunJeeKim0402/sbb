<html layout:decorate="~{layout}">
<div layout:fragment="content" class="container my-3">	
<style>
	#slider-container {
	    width: 100%;
	    max-width: 600px;
	    height: 400px;
	    position: relative;
	    overflow: hidden;
	    background-color: pink;
	}
	.slider-wrapper {
	    display: flex;
	    width: 300%; 
	    height: 100%;
	    transition: transform 0.5s ease-in-out;
	}
	#slider img {
	    width: 100%;
	    height: 100%;
	    object-fit: cover;
	}
	.nav-button {
	    position: absolute;
	    top: 50%;
	    transform: translateY(-50%);
	    background-color: rgba(0, 0, 0, 0.5);
	    color: white;
	    border: none;
	    padding: 10px;
	    cursor: pointer;
	    z-index: 100;
	}
	.prev {
	    left: 10px;
	}
	.next {
	    right: 10px;
	}
</style>
<div class="slider-container" id="slider-container">
    <div class="slider-wrapper" id="slider">
        <img src="https://i.namu.wiki/i/9ZQ006q6J9MdhdjfM6DPpCbIsfaLezg5Fr9GyvtmRtEAItzwSV4DbpRlyG-ZMxgTVn4_5O-hg8DHpZSwYsRobA.webp" alt="Image 1">
        <img src="https://via.placeholder.com/600x400.png?text=Image+2" alt="Image 2">
        <img src="https://via.placeholder.com/600x400.png?text=Image+3" alt="Image 3">
    </div>

    <button class="nav-button prev" onclick="prevSlide()">&#10094;</button>
    <button class="nav-button next" onclick="nextSlide()">&#10095;</button>
</div>
<script>
    let currentSlide = 0;
    const totalSlides = 3; // 총 이미지 개수
    const slider = document.getElementById('slider');

    function showSlide(slideIndex) {
        const offset = -slideIndex * 100; // 슬라이드를 움직일 거리 계산 (100%씩)
        slider.style.transform = `translateX(${offset}%)`;
    }

    function nextSlide() {
        currentSlide = (currentSlide + 1) % totalSlides; // 다음 슬라이드로 이동
        showSlide(currentSlide);
    }

    function prevSlide() {
        currentSlide = (currentSlide - 1 + totalSlides) % totalSlides; // 이전 슬라이드로 이동
        showSlide(currentSlide);
    }
</script>
</div>
</html>