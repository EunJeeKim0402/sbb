<html layout:decorate="~{layout}">
<div layout:fragment="content" class="container my-3">	
<style>
	#slider-container {
	    width: 100%;
	    height: 650px;
	    position: relative;
	    overflow: hidden;
	    background-color: pink;
	}
	.slider-wrapper {
	    display: flex;
	    width: 300%; 
	    height: 100%;
	    transition: transform 0.5s ease-in-out;
	}
	#slider img {
	    width: 100%;
	    height: 100%;
	    object-fit: cover;
	}
	.nav-button {
	    position: absolute;
	    top: 50%;
	    transform: translateY(-50%);
	    background: none;
	    color: #333; 
	    border: none;
	    padding: 15px; 
	    cursor: pointer;
	    border-radius: 50%; 
	    z-index: 100;
	    transition: background-color 0.3s ease; 
	}
	.prev {
	    left: 10px;
		font-size: 30px;
		color: floralwhite;
	}
	.next {
	    right: 10px;
		font-size: 30px;
	}
</style>
<div class="slider-container" id="slider-container">
    <div class="slider-wrapper" id="slider">
        <img src="https://i.namu.wiki/i/9ZQ006q6J9MdhdjfM6DPpCbIsfaLezg5Fr9GyvtmRtEAItzwSV4DbpRlyG-ZMxgTVn4_5O-hg8DHpZSwYsRobA.webp" alt="Image 2">
		<img src="https://static.news.zumst.com/images/37/2023/01/08/3e97c0289e394e45b70b9bb628b30f05.jpg" alt="Image 1">
		<img src="https://via.placeholder.com/600x400.png?text=Image+3" alt="Image 3">
    </div>

    <button class="nav-button prev" onclick="prevSlide()">&#10094;</button>
    <button class="nav-button next" onclick="nextSlide()">&#10095;</button>
</div>
<script>
    let currentSlide = 0;
    const totalSlides = 3;
    const slider = document.getElementById('slider');
	const sliderWidth = 100 / totalSlides;

    function showSlide(slideIndex) {
		const offset = -slideIndex * sliderWidth; 
        slider.style.transform = `translateX(${offset}%)`;
    }

    function nextSlide() {
        currentSlide = (currentSlide + 1) % totalSlides; 
        showSlide(currentSlide);
    }

    function prevSlide() {
        currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
        showSlide(currentSlide);
    }
	window.onload = () => {
	    document.getElementById('slider').style.width = `${totalSlides * 100}%`; // 이미지 개수만큼 슬라이더 너비 설정
	};
</script>
</div>
</html>